{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenOCD Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build/stm32cubemx-example.elf",
            "request": "launch",
            "type": "cortex-debug",

            // When running in a container on Windows, openocd needs to be started
            // in Windows before attempting to connect to the gdbserver here.
            "servertype": "external",
            "gdbTarget": "host.docker.internal:3333",

            "preLaunchTask": "build",
            "runToEntryPoint": "main",
            "device": "STM32F401RET6",
            "configFiles": [
                "board/st_nucleo_f4.cfg"
            ],
            "svdFile": ".vscode/STM32F401.svd",
        }
    ]
}